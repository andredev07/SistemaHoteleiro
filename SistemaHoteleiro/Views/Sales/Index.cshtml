@model IEnumerable<SistemaHoteleiro.Models.Sale>

@{
    ViewData["Title"] = "Reservas produtos";
}

<h1>Lista de Vendas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar uma nova Venda</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReserveId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReserveId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-sm">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
